<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrganizationDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Organization Name: "
            android:id="@+id/orgNameTV"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            >

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Organization Email: "
            android:id="@+id/orgEmailTV"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            >

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Organization Phone: "
            android:id="@+id/orgPhoneTV"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            >

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Organization Email: "
            android:id="@+id/orgLocationTV"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            >

        </TextView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Request Donate"
            android:id="@+id/reqDonate"
        >
        </Button>

    </LinearLayout>

</LinearLayout>